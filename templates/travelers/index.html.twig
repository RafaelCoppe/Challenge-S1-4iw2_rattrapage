{% extends 'base.html.twig' %}

{% block title %}Travelers index{% endblock %}

{% block body %}
    <h1>Travelers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for traveler in travelers %}
            <tr>
                <td>{{ traveler.id }}</td>
                <td>{{ traveler.lastname }}</td>
                <td>{{ traveler.firstname }}</td>
                <td>{{ traveler.age }}</td>
                <td>
                    <a href="{{ path('app_travelers_show', {'id': traveler.id}) }}">show</a>
                    <a href="{{ path('app_travelers_edit', {'id': traveler.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_travelers_new', {'invoice': invoice_id}) }}">Create new</a>
{% endblock %}
