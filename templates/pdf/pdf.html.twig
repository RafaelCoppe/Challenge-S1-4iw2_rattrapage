<html>
<head>

</head>

<style>
    @page {
        margin: 0;
        font-family: 'Helvetica', serif;
        font-size: 9pt;
    }

    #watermark {
        position: absolute;
        top: 50%;
        left: -1em;
        transform: rotate(-45deg);
        white-space: nowrap;
        font-size: 36pt;
        font-weight: bold;
        color: #ffc0cb;
        border: thin solid #ffc0cb;
        opacity: 0.5;
    }

    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        height: 20mm;
    }

    footer div {
        margin: 0 10mm;
        padding-top: 2mm;
        text-align: center;
        border-top: thin solid grey;
    }

    body {
        margin: 40mm 10mm 20mm 10mm;
    }

    .quoteNumber {
        margin-bottom: 3em;
    }

    .quoteNumber > * {
        margin: 5px 0;
    }

    .quoteNumber h1 {
        color: #004283;
    }

    .quoteNumber h2 {
        color: #3886CE;
    }

    .mainTable {
        width: 90%;
        margin: 0 auto;
    }

    .productsTable {
        width: 100%;
        border-collapse: collapse;
        font-size: smaller;
    }

    .productsTable th,
    .productsTable td {
        padding: 6px;
        text-align: left;
        border-bottom: thin solid #3886CE;
    }

    .productsTable th {
        color: #004283;
    }

    .empty {
        width: 5%;
        border-bottom: thin solid transparent !important;
    }

    .productsTable th:nth-child(2),
    .productsTable td:nth-child(2) {
        width: 50%;
    }

    .productsTable th:nth-child(3),
    .productsTable td:nth-child(3) {
        width: 5%;
    }

    .productsTable th:nth-child(4),
    .productsTable td:nth-child(4),
    .productsTable th:nth-child(5),
    .productsTable td:nth-child(5),
    .productsTable th:nth-child(6),
    .productsTable td:nth-child(6),
    .productsTable th:nth-child(7),
    .productsTable td:nth-child(7) {
        width: 7.5%;
    }

    .productsTable td:nth-child(1) {
        vertical-align: top;
    }

    .productsTotalTable {
        width: 35%;
        margin: 0 0 auto auto;
        font-size: x-small;
        border-collapse: collapse;
    }

    .productsTotalTable th,
    .productsTotalTable td {
        padding: 3px;
        text-align: left;
        border-bottom: thin solid #3886CE;
    }

    .productsTotalTable tbody tr:nth-child(1) {
    }
    .productsTotalTable tbody tr:nth-child(2) {
    }
    .productsTotalTable tbody tr:nth-child(3) {
    }

    .productsTotalTable tbody th:nth-child(1) {
        width: 15%;
    }
    .productsTotalTable tbody th:nth-child(2) {
        width: 20%;
    }
</style>
