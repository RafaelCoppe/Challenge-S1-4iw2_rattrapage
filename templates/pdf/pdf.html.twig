<body>
{% if dev %}
    <div id="watermark">ENVIRONNEMENT DE DEVELOPPEMENT</div>
{% endif %}
<header>
    <div>
        <p>aaaaa</p>
    </div>
</header>

<footer>
    {% include 'pdf/footer.html.twig' %}
</footer>

<main>
    <div class="quoteNumber">
        <h1>DEVIS</h1>
        <h2>No. #{{ quote.ref }}</h2>
    </div>

    <div class="mainTable">
        <table class="productsTable">
            <thead>
            <tr>
                <th class="empty"></th>
                <th>Description</th>
                <th>Qté</th>
                <th>P.U.</th>
                <th>Total HT</th>
                <th>Taxe %</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            {% for line in lines %}
                <tr>
                    <td class="empty">#{{ line.place }}</td>
                    <td>
                        {{ line.product.label }} - {{ line.product.type }}<br>
                        {{ line.additional }}
                    </td>
                    <td>{{ line.quantity }}</td>
                    <td>{{ line.unit_price }}</td>
                    <td>{{ line.totalHt }}</td>
                    <td>{{ line.tax }}</td>
                    <td>{{ line.totalTax }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <br>

        <table class="productsTotalTable">
            <tr>
                <td>Total HT</td>
                <td>{{ total }} €</td>
            </tr>
            <tr>
                <td>Total Taxes</td>
                <td>{{ totalTaxe }} €</td>
            </tr>
            <tr>
                <td>Total</td>
                <td>{{ totalHT }} €</td>
            </tr>
        </table>
    </div>
</main>
</body>
</html>
