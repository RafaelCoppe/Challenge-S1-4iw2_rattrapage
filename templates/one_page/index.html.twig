{% extends 'base.html.twig' %}

{% block title %}Devisio | Contact{% endblock %}

{% block body %}
    <!-- Header -->
    <header class="bg-orange-500 mx-auto text-white py-4">
        <div class="mx-16 flex justify-between items-center">
            <img src="/images/logoPlane.png" alt="logo" class="h-auto w-24 aspect-auto">
        </div>
    </header>

    <!-- Contenu principal -->
    <main class="w-full max-w-full overflow-none">
        <!-- Blocs de texte et d'image -->
        <section class="w-full flex flex-col">
            <div class="bg-blue-800 text-white flex flex-col h-screen">
                <div class="flex flex-row h-full w-full">
                    <div class="flex flex-col justify-center mx-auto w-1/2 p-16">
                        <img src="/images/logoDevisioWhite.png" alt="logo" class="h-auto w-1/2 aspect-auto mb-16">
                        <p class="text-4xl font-normal mb-2 mr-16">Un outil unique pour répondre à tous les besoins de votre agence</p>
                    </div>
                    <div class="flex items-center justify-center mx-auto w-1/2">
                        <img src="/images/happy-woman.jpg" alt="Image 1" class="h-full w-auto aspect-auto">
                    </div>
                </div>
            </div>
            <div class="bg-white text-white p-16 flex flex-col h-screen">
                <div class="flex flex-row h-auto w-full">
                    <div class="flex items-center justify-center p-8 mx-auto shadow-2xl rounded-xl w-1/2">
                        <img src="/images/Dashboard.png" alt="Dashboard" class="">
                    </div>
                    <div class="flex flex-col justify-center mx-auto w-1/2 text-right">
                        <h2 class="text-6xl font-bold mb-8 text-blue-800">Simplicité</h2>
                        <h3 class="text-4xl font-bold mb-2 text-blue-500">Des devis simples et rapides en quelques clics seulement.</h3>
                    </div>
                </div>
            </div>
            <div class="bg-blue-500 text-white p-16 flex flex-col h-screen">
                <div class="flex flex-row h-auto w-full">
                    <div class="mx-auto w-1/2">
                        <h2 class="text-2xl font-bold mb-4">Nous contacter</h2>
                        <h3 class="text-lg font-bold mb-2">Formulaire de contact</h3>
                    </div>
                    <div class="flex items-center justify-center mx-auto w-1/2">
                        <img src="chemin/vers/image1.jpg" alt="Image 1" class="w-1/2">
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-blue-800 text-white py-4">
        <div class="container mx-auto">
            <p>© 2024 Mon Site. Tous droits réservés.</p>
        </div>
    </footer>
{% endblock %}
