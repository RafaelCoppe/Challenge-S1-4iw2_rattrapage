<form class="bg-white rounded-md p-6 w-10/12" action="{{ path('app_login') }}" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes déjà connecté(e) comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
        </svg>
        <input id="email" class="pl-2 w-full outline-none border-none" type="email" name="_username" placeholder="Adresse Mail" value="{{last_username}}" required autofocus/>
    </div>
    <div class="flex items-center border-2 mb-2 py-2 px-3 rounded-2xl">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fillRule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clipRule="evenodd" />
        </svg>
        <input class="pl-2 w-full outline-none border-none" type="password" name="_password" id="password" placeholder="Mot de Passe" />
    </div>
    <div class="grid grid-cols-2 gap-6 items-center">
        <div class="grid grid-rows-3 row-span-full gap-3">
            <span class="text-md sm:text-xs xs:text-xs ml-2 block hover:text-blue-500 cursor-pointer duration-500 transition-all">Mot de passe oublié ?</span>
            <label class="text-xs mt-2 ml-2 block hover:text-blue-500 cursor-pointer duration-500 transition-all">
                <input type="checkbox" name="_remember_me">
                Rester connecté ?
            </label>
            <a href="path('contact')"class="text-md sm:text-xs xs:text-xs ml-2 block hover:text-blue-500 cursor-pointer duration-500 transition-all">Pas encore de compte ?</a>
        </div>
        <div class="row-span-full">
            <button type="submit" class="w-40 bg-[#64c8ff] py-1 rounded-full hover:bg-[#004283] transition-all duration-500 text-white font-semibold">Se Connecter</button>
        </div>
    </div>
</form> 