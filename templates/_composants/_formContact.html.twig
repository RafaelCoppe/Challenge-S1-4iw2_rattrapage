<form class="w-full max-w-xl mx-4 mt-10" action="{{ path('mail_contact') }}" onsubmit="return confirm('Validez-vous la demande de contact ?')" method="post">
    <div class="flex flex-row justify-between text-black">
        <div class="w-1/2">
            <div class="mb-3">
                <select id="civilite" name="civilite" required placeholder="Civilité*" class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline">
                    <option disabled selected hidden>Civilité</option>
                    <option value="Mr">Monsieur</option>
                    <option value="Mme">Madame</option>
                    <option value="Autre">Autre</option>
                </select>
            </div>
            <div class="mb-3">
                <input type="text" id="firstname" name="firstname" required placeholder="Prénom*" class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="mb-3">
                <input type="email" id="email" name="email" required placeholder="Email *" class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline">
            </div>
        </div>
        <div>
            <div class="mb-3">
                <input type="text" id="name" name="name" required placeholder="Nom *" class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="mb-3">
                <input type="tel" id="phone" name="phone" placeholder="Téléphone" class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline">
            </div> 
            <div class="mb-3">
                <select id="contact_preference" name="contact_preference" required class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline">
                    <option disabled selected hidden>Préférence de contact</option>
                    <option value="telephone">Téléphone</option>
                    <option value="mail">Mail</option>
                </select>
            </div>
        </div>
    </div>
    <div class="mb-4 text-black">
        <textarea id="message" name="message" required placeholder="Message *" class="appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline h-32 resize-none"></textarea>
    </div>
    <div class="accept-terms mb-4">
        <input type="checkbox" id="terms" name="terms" required class="mr-2">
        <label for="terms" class="text-gray-700 font-bold"> J'accepte que mes données personnelles soient conservées et utilisées par RCA conformément aux dispositions de notre politique de confidentialité. </label>
    </div>
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"> Envoyer </button>
</form>
