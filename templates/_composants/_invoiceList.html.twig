<div class="w-full">
    <div class="lg:ml-40 md:grid-cols-2 gap-4 mt-4 p-2 ml-2 ">  
        <h1 class="text-3xl">Liste des factures</h1>
        <div class="bg-white p-4 rounded-md">
            <div class="flex justify-between items-center">
                <h2 class="text-gray-500 text-lg font-semibold pb-4">Factures</h2>
                    <a href="{{ path('app_invoice_new') }}" class="justify-end w-1/8 flex items-center bg-primary text-white font-semibold py-1 px-4 rounded">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                        Ajouter
                    </a>
            </div>
            <div class="my-1"></div> 
            <div class="bg-primary h-px mb-6"></div> 
                <table class="w-full table-auto text-sm">
                    <thead>
                        <tr class="text-sm leading-normal">
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Id</th>
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Termes</th>
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-right">Nom</th>
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-right">Prenom</th>
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Mail</th>
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Tel</th>
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Adresse</th>
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Ville</th>
                            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for invoice in invoices %}
                            <tr class="hover:bg-grey-lighter">
                                <td class="py-2 px-4 border-b border-grey-light">{{ invoice.id }}</td>
                                <td class="py-2 px-4 border-b border-grey-light">{{ invoice.terms }}</td>
                                <td class="py-2 px-4 border-b border-grey-light">{{ invoice.payment_lastname }}</td>
                                <td class="py-2 px-4 border-b border-grey-light">{{ invoice.payment_firstname }}</td>
                                <td class="py-2 px-4 border-b border-grey-light">{{ invoice.payment_email }}</td>
                                <td class="py-2 px-4 border-b border-grey-light">{{ invoice.payment_phone }}</td>
                                <td class="py-2 px-4 border-b border-grey-light">{{ invoice.payment_address }}</td>
                                <td class="py-2 px-4 border-b border-grey-light">{{ invoice.payment_city }}</td>
                                <td class="py-2 px-4 border-b border-grey-light justify-end flex gap-4">
                                    {% set invoice_show = path('app_invoice_show', {'id': invoice.id}) %}
                                    {% set invoice_edit = path('app_invoice_edit', {'id': invoice.id}) %}
                                    {% include '_composants/_specialButton.html.twig' with {'specialButtonAction':invoice_show,'specialButtonText': 'Voir'} %}
                                    {% include '_composants/_specialButton.html.twig' with {'specialButtonAction':invoice_edit,'specialButtonText': 'Modifier'} %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">Aucun résultat trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>  
        
    </div>
</div>