<div class="w-full">
    <div class="lg:ml-40 md:grid-cols-2 gap-4 mt-4 p-2 ml-2 ">  
    <h1 class="text-3xl">Liste des clients<h1> 
               
                    <!-- Section 3 - Table des clients  -->
        <div class="bg-white p-4 rounded-md">
            <div class="flex justify-between items-center" >
                <h2 class="text-gray-500 text-lg font-semibold pb-4">Clients</h2>
                {{ form_start(form) }}
                <div class='flex items-center justify-center  mb-4'>
                    <div class="flex w-full rounded bg-white">
                        <div class="w-full flex items-center border-y-2 border-x-2 border-black">
                        {{ form_row(form.search) }}
                        </div>
                        <button type="submit" class="m-2 rounded bg-primary px-4 py-2 text-white">
                            <svg class="fill-current h-6 w-6" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 56.966 56.966" style="enable-background:new 0 0 56.966 56.966;" xml:space="preserve" width="512px" height="512px">
                                <path d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" />
                            </svg>
                        </button> 
                        {{ form_end(form) }} 
                        <a href="{{ path('app_client_new') }}" class="justify-end w-1/8 flex items-center bg-primary text-white font-semibold py-1 px-4 rounded">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                            </svg>
                            Ajouter
                        </a>
                    </div>
                </div>  
                {# <a href="{{ path('app_client_new') }}">Create new</a> #}
                {# <a href="{{ path('app_client_new') }}" class="justify-end w-1/8 flex items-center bg-primary text-white font-semibold py-2 px-4 rounded">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                    Ajouter
                </a> #}
            </div>
            
            <div class="my-1"></div> 
            <div class="bg-primary h-px mb-6"></div> 
            <table class="w-full table-auto text-sm">
            <thead>
                <tr class="text-sm leading-normal">
                    <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Nom</th>
                    <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Email</th>
                    <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-right">Téléphone</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr class="hover:bg-grey-lighter">
                        <td class="py-2 px-4 border-b border-grey-light">{{ client.lastname }} {{ client.firstname }}</td>
                        <td class="py-2 px-4 border-b border-grey-light">{{ client.email }}</td>
                        <td class="py-2 px-4 border-b border-grey-light text-right">{{ client.phone }}</td>
                        <td class="py-2 px-4 border-b border-grey-light justify-end flex gap-4">
                            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class=" flex items-center bg-third text-white font-semibold py-2 px-4 rounded">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                </svg>
                                Edit
                            </a>
                            <a href="{{ path('app_client_show', {'id': client.id}) }}" class="flex items-center bg-third text-white font-semibold py-2 px-4 rounded">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                </svg>

                                Voir
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucun résultat trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
</div>