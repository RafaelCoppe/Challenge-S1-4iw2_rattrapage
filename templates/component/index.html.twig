        <div>
            {% include '_composants/_specialLabel.html.twig' with {'id': 'specialButton', 'text': 'Special Button '} %}
            {% include '_composants/_specialButton.html.twig' with {'buttonText': 'Button', 'buttonClass': 'btn bg-secondary'} %}
        </div>
        <div>
            {% include '_composants/_specialLabel.html.twig' with {'id': 'specialButtonSVG', 'text': 'Special Button SVG'} %}
            {% include '_composants/_specialButtonSVG.html.twig' with {'buttonClass': 'btn bg-secondary'} %}
        </div>
    </div>



{% endblock %}
