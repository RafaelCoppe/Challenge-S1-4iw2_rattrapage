<div class="w-full">
    <div class="lg:ml-40 md:grid-cols-2 gap-4 mt-4 p-2 ml-2 ">
        <div class="container mx-auto mt-8">
        <h1 class="text-2xl font-semibold mb-4">Créer une facture</h1>
                {{ form_start(form, {'attr': {'class':'bg-white border border-gray-300 text-md rounded-md p-6 mb-6'}})}}
                        {% include '_composants/_specialFormField.html.twig' with {
                                'form': form.terms,
                                'label': 'Termes'
                        } %}
                        {% include '_composants/_specialFormField.html.twig' with {
                                'form': form.payment_lastname,
                                'label': 'Nom'
                        } %}
                        {% include '_composants/_specialFormField.html.twig' with {
                                'form': form.payment_firstname,
                                'label': 'Prénom'
                        } %}
                        {% include '_composants/_specialFormField.html.twig' with {
                                'form': form.payment_email,
                                'label': 'Email'
                        } %}
                        {% include '_composants/_specialFormField.html.twig' with {
                                'form': form.payment_phone,
                                'label': 'Téléphone'
                        } %}
                        {% include '_composants/_specialFormField.html.twig' with {
                                'form': form.payment_address,
                                'label': 'Adresse'
                        } %}
                        {% include '_composants/_specialFormField.html.twig' with {
                                'form': form.payment_city,
                                'label': 'Ville'
                        } %}
		
                        
<div class="flex justify-between mt-5">
                                {% include '_composants/_specialSubmitButton.html.twig' with {'buttonText': 'Save', 'buttonClass': 'btn bg-[#64c8ff] mt-2'} %}
                        </div>
                {{ form_end(form) }}
        </div>
    </div>
</div>

