{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<div class="h-screen flex">
        {% include '_composants/_topBar.html.twig' %}
    <div class="flex-1 flex mt-14">
        {% include '_composants/_sideBar.html.twig' %}
        {# {% include '_composants/_client/_showclient.html.twig' %} #}
        <div class="w-full">
    <div class="lg:ml-40 md:grid-cols-2 gap-4 mt-4 p-2 ml-2 ">   
    <div class="container mx-auto mt-8">
        <h1 class="text-3xl font-semibold mb-4">Détails du client</h1>
        <form action="{{ path('app_client_edit', {'id': client.id}) }}" method="post" class="bg-white shadow-md rounded-md p-6 mb-6">
            <div class="mb-4">
                <label for="nom" class="block text-xl mb-3 font-medium text-gray-700">Nom</label>
                <input readonly type="text" value="{{ client.lastname }}" class="mt-1 bg-transparent border-2 p-2  rounded-md w-full">
            </div>

            <div class="mb-4">
                <label for="prenom" class="block text-xl mb-3 font-medium text-gray-700">Prénom</label>
                <input readonly type="text" id="prenom" name="prenom" value="{{ client.firstname }}" class="mt-1 p-2 bg-transparent border-2 rounded-md w-full">
            </div>

            <div class="mb-4">
                <label for="email" class="block text-xl mb-3 font-medium text-gray-700">Email</label>
                <input readonly type="email" id="email" name="email" value="{{ client.email }}" class="mt-1 p-2 bg-transparent border-2 rounded-md w-full">
            </div>

            <div class="mb-4">
                <label for="telephone" class="block text-xl mb-3 font-medium text-gray-700">Téléphone</label>
                <input readonly type="tel" id="telephone" name="telephone" value="{{ client.phone }}" class="mt-1 bg-transparent border-2 p-2 rounded-md w-full">
            </div>

            <div class="mb-4">
                <label for="adresse" class="block text-xl mb-3 font-medium text-gray-700">Adresse</label>
                <input readonly type="text" id="adresse" name="adresse" value="{{ client.address }}" class="mt-1 bg-transparent border-2 p-2 rounded-md w-full">
            </div>

            <div class="mb-4">
                <label for="ville" class="block text-xl mb-3 font-medium text-gray-700">Ville:</label>
                <input readonly type="text" id="ville" name="ville" value="{{ city }}" class="mt-1 bg-transparent border-2 p-2 rounded-md w-full">
            </div>

            <div class="flex justify-between">
                <a href="{{ path('app_client_index') }}" class=" flex items-center bg-primary text-white font-semibold py-2 px-4 rounded">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
                    </svg>
                    Retour à la liste
                </a>
                <div class="flex gap-4">
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class=" flex items-center bg-third text-white font-semibold py-2 px-4 rounded">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                        </svg>
                        Edit
                    </a>
                    {# <button type="submit" class="flex items-center bg-customOrange text-white font-semibold py-2 px-4 rounded">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                        <a href="{{ path('app_client_delete', {'id': client.id}) }}">Supprimer</a>
                    </button> #}
                </div>
            </div>
        </form>
        {{ include('client/_delete_form.html.twig') }}
    </div>
    </div>
</div>
        {% include '_composants/_sidebarRight.html.twig' %}
    </div>
</div>
{% endblock %}
